movement Whitot_Town_Player_walk_up {
	face_up
	walk_up
}

movement Woman_first_tile {
	face_left
	walk_left
	face_down
}

movement Woman_second_tile {
	face_left
	walk_left * 2
	face_down
}

movement Woman_third_tile {
	face_left
	walk_left * 3
	face_down
}

movement Woman_fourth_tile {
